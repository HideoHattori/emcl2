<launch>
  <!-- Set tf -->
  <!-- <node pkg="tf" type="static_transform_publisher" name="baseframe_to_baselink" args="0 0 0 0 0 0 base_footprint base_link 100" />  -->

  <!-- Set tf -->
  <!-- <node pkg="tf" type="static_transform_publisher" name="world_to_map" args="0 0 0 0 0 0 world map 100" /> -->

  <!-- <arg name="map_filepath" value="$(find agv_sim)/../../data/map/amcl/osaki_testfield_3f_1104.yaml" /> -->

  <arg name="map_filepath" default="$(find agv_sim)/../../data/map/amcl/osaki_testfield_3f_1015merge_refine.yaml" />
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_filepath)" />



  <!-- Arguments -->
  <arg name="scan_topic"     default="wr_scan_cropped"/>
  <arg name="initial_pose_x" default="-5.0"/>
  <arg name="initial_pose_y" default="11.7"/>
  <arg name="initial_pose_a" default="-1.57"/>
  <!-- position: {x: -5.0, y: 11.7, z: 0.0} -->

  <!-- EMCL -->
  <node pkg="emcl2" type="emcl2_node" name="emcl2_node" output="screen">

    <param name="odom_freq"                 value="50"/>
    <param name="num_particles"             value="1000"/>

    <param name="odom_frame_id"             value="odom"/>
    <!-- <param name="footprint_frame_id"        value="base_footprint"/> -->
    <param name="footprint_frame_id"        value="base_link"/>
    <param name="base_frame_id"             value="base_link"/>

    <param name="initial_pose_x"            value="$(arg initial_pose_x)"/>
    <param name="initial_pose_y"            value="$(arg initial_pose_y)"/>
    <param name="initial_pose_a"            value="$(arg initial_pose_a)"/>

    <param name="odom_fw_dev_per_fw"       value="0.08"/>
    <param name="odom_fw_dev_per_rot"      value="0.001"/>
    <param name="odom_rot_dev_per_fw"      value="0.05"/>
    <param name="odom_rot_dev_per_rot"     value="0.3"/>

    <param name="laser_likelihood_max_dist" value="0.15"/>

    <param name="alpha_threshold" value="0.3"/>
    <param name="open_space_threshold" value="0.08"/>

    <param name="expansion_radius_position" value="0.1"/>
    <param name="expansion_radius_orientation" value="0.1"/>

    <param name="range_threshold" value="0.3"/>

    <remap from="scan"                      to="$(arg scan_topic)"/>
    <param name="laser_min_range"           value="0.0"/>
    <param name="laser_max_range"           value="100000000.0"/>

    <param name="scan_increment"           value="1"/>

  </node>
</launch>
